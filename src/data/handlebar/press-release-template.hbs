<!DOCTYPE html>
<html>
<head>
<style>
body {
  font-family: 'Georgia', serif;
  line-height: 1.6;
  color: #333;
  margin: 0;
  padding: 0;
  background-color: #fff;
}
.press-release {
  max-width: 800px;
  margin: 0 auto;
  padding: 40px;
}
.letterhead {
  text-align: center;
  margin-bottom: 30px;
}
.company-logo {
  margin-bottom: 15px;
}
.logo-placeholder {
  display: inline-block;
  width: 200px;
  height: 60px;
  background-color: #f2f2f2;
  line-height: 60px;
  text-align: center;
  color: #666;
  font-size: 16px;
}
.company-name {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #1a365d;
}
.company-tagline {
  font-size: 14px;
  color: #666;
  margin-bottom: 15px;
}
.release-info {
  text-align: center;
  margin-bottom: 30px;
}
.release-label {
  display: inline-block;
  background-color: #1a365d;
  color: #fff;
  padding: 5px 15px;
  font-weight: bold;
  margin-bottom: 10px;
}
.release-date {
  font-weight: bold;
}
.headline {
  font-size: 24px;
  font-weight: bold;
  margin: 20px 0;
  text-align: center;
  line-height: 1.4;
}
.subheadline {
  font-size: 18px;
  font-style: italic;
  margin-bottom: 30px;
  text-align: center;
  color: #555;
}
.dateline {
  font-weight: bold;
  margin-bottom: 20px;
}
.content {
  margin-bottom: 30px;
}
.content p {
  margin-bottom: 20px;
  text-align: justify;
}
.quote {
  border-left: 4px solid #1a365d;
  padding-left: 20px;
  margin: 30px 0;
  font-style: italic;
}
.quote-text {
  font-size: 18px;
  margin-bottom: 10px;
  line-height: 1.5;
}
.quote-attribution {
  font-weight: bold;
}
.boilerplate {
  border-top: 1px solid #ddd;
  margin-top: 30px;
  padding-top: 20px;
}
.boilerplate-title {
  font-weight: bold;
  margin-bottom: 10px;
}
.contact-info {
  border-top: 1px solid #ddd;
  margin-top: 30px;
  padding-top: 20px;
  font-size: 14px;
}
.contact-title {
  font-weight: bold;
  margin-bottom: 5px;
}
.contact-person {
  margin-bottom: 5px;
}
.contact-details {
  margin-bottom: 5px;
}
</style>
</head>
<body>
<div class="press-release">
  <div class="letterhead">
    {{#if company.logoUrl}}
      <img src="{{company.logoUrl}}" alt="{{company.name}} Logo" class="company-logo" height="60">
    {{else}}
    <div class="company-logo">
      <div class="logo-placeholder">{{company.name}} LOGO</div>
    </div>
    {{/if}}
    <div class="company-name">{{company.name}}</div>
    <div class="company-tagline">{{company.tagline}}</div>
  </div>
  
  <div class="release-info">
    <div class="release-label">PRESS RELEASE</div>
    <div class="release-date">{{releaseInfo.date}}</div>
    {{#if releaseInfo.embargo}}
    <div class="release-embargo">EMBARGO UNTIL: {{releaseInfo.embargo}}</div>
    {{/if}}
  </div>
  
  <div class="headline">{{headline}}</div>
  <div class="subheadline">{{subheadline}}</div>
  
  <div class="dateline">{{dateline}}</div>
  
  <div class="content">
    {{#each contentParagraphs}}
    <p>{{this}}</p>
    {{/each}}
    
    {{#if quote}}
    <div class="quote">
      <div class="quote-text">{{quote.text}}</div>
      <div class="quote-attribution">{{quote.attribution}}</div>
    </div>
    {{/if}}
    
    {{#each additionalParagraphs}}
    <p>{{this}}</p>
    {{/each}}
  </div>
  
  <div class="boilerplate">
    <div class="boilerplate-title">About {{company.name}}:</div>
    <p>{{companyDescription}}</p>
  </div>
  
  <div class="contact-info">
    <div class="contact-title">Media Contact:</div>
    <div class="contact-person">{{contact.name}}</div>
    <div class="contact-details">{{contact.title}}, {{company.name}}</div>
    <div class="contact-details">Phone: {{contact.phone}}</div>
    <div class="contact-details">Email: {{contact.email}}</div>
    {{#if contact.additionalInfo}}
    <div class="contact-details">{{contact.additionalInfo}}</div>
    {{/if}}
  </div>
</div>
</body>
</html>
